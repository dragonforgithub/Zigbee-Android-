<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/all_bg"
    >
    <ScrollView
        android:id="@+id/activity_jiaozhiliu_scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/titlebar" >
				
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="交流直流电机控制"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="10pt" />
            </FrameLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/main_every_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="窗帘控制(交流电机)"
                    android:textColor="#ffffff"
                    android:textSize="8pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/dj_jl_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/design_dj" />
                    	
                    <RelativeLayout
                        
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        >
						
					     <Button
					         android:id="@+id/dj_jl_forward_bt"
					         style="?android:attr/buttonStyleSmall"
					         android:layout_width="70dp"
					         android:layout_height="50dp"
					         android:layout_alignParentLeft="true"
					          
					         android:background="@drawable/design_bt_selector"
					         android:text="正转" />

                          <Button
                               android:id="@+id/dj_jl_reverse_bt"
                               style="?android:attr/buttonStyleSmall"
                               android:layout_width="70dp"
                               android:layout_height="50dp"
                               android:layout_centerHorizontal="true"
                               android:layout_gravity="center"
                               android:background="@drawable/design_bt_selector"
                               android:text="反转" />
                          
                          <Button
                              android:id="@+id/dj_jl_stop_bt"
                              style="?android:attr/buttonStyleSmall"
                              android:layout_width="70dp" 
                              android:layout_height="50dp"
                              android:layout_alignParentRight="true"
                              
                              android:background="@drawable/design_bt_selector"
                              android:text="停止" />
                        
					</RelativeLayout>
                
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/main_every_bg"
                android:orientation="vertical" >
				
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="直流电机控制"
                    android:textColor="#ffffff"
                    android:textSize="8pt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >
 					
                    <ImageView
                        android:id="@+id/dj_zl_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/design_dj" />
                    	
                    <RelativeLayout
                        
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >
							  
					     <Button
					         android:id="@+id/dj_zl_forward_bt"
					         style="?android:attr/buttonStyleSmall"
					         android:layout_width="70dp"
					         android:layout_height="50dp"
					         android:layout_alignParentLeft="true"
					          
					         android:background="@drawable/design_bt_selector"
					         android:text="正转" />

                          <Button
                               android:id="@+id/dj_zl_reverse_bt"
                               style="?android:attr/buttonStyleSmall"
                               android:layout_width="70dp"
                               android:layout_height="50dp"
                               android:layout_centerHorizontal="true"
                               android:layout_gravity="center"
                               android:background="@drawable/design_bt_selector"
                               android:text="反转" />
                          
                          <Button
                              android:id="@+id/dj_zl_stop_bt"
                              style="?android:attr/buttonStyleSmall"
                              android:layout_width="70dp" 
                              android:layout_height="50dp"
                              android:layout_alignParentRight="true"
                              android:background="@drawable/design_bt_selector"
                              android:text="停止" />
                        
					</RelativeLayout>
                 </LinearLayout>
                <!--     
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="占空比: "
                        android:textColor="#ffffff" 
                        android:textSize="8pt"
                        />
                     
                    <TextView
                        android:id="@+id/dj_zl_zkb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="0"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textSize="8pt"
                        android:textAlignment="center"
                        android:textColor="#ffffff" />
  					<TextView
